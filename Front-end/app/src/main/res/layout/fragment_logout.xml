<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">


    <ImageView
        android:id="@+id/registration_image_clock"
        android:layout_width="271dp"
        android:layout_height="166dp"
        android:layout_marginTop="84dp"
        app:layout_constraintBottom_toTopOf="@+id/signOffButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login_image_clock" />

    <Button
        android:id="@+id/signOffButton"
        android:layout_width="250dp"
        android:layout_height="111dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/colorAccent"
        android:drawableBottom="@drawable/ic_power_settings_new_black_24dp"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/menu_logout"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>